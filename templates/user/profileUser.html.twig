{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}

    <div class="">
        {% if app.user.id == user.id %}
            <h2>Mon Profil</h2>
        {% else %}
            <h2>{{ user.userName }}</h2>
        {% endif %}
    </div>
    <div class="">
        <p>Nom : {{ user.lastname }}</p>
        <p>Pr√©nom : {{ user.firstname }}</p>
        <p>Email : {{ user.email }}</p>
        <p>Campus : {{ user.campus.name }}</p>
    </div>
    <div>
        {% if app.user.id == user.id %}
            <a href="{{ path('user_modify') }}" class="a-button">Modifier le profil</a>
        {% endif %}
    </div>
    <div>
        <a href="{{ path('main_home') }}" class="a-button">Retour</a>
    </div>

{% endblock %}

